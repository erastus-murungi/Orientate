<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textViewStyle">@style/ProximaTextViewStyle</item>
        <item name="android:buttonStyle">@style/ProximaButtonStyle</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/darkBlue</item>
    </style>

    <style name="ArialTextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/arial_unicode_ms</item>
    </style>

    <style name="ProximaTextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/proxima_nova_regular</item>
    </style>

    <style name="ProximaButtonStyle" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/proxima_nova_regular</item>
    </style>

    <style name="signUpDateOfBirthDatePicker"
        parent="@android:style/Widget.DatePicker" />


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
    </style>

    <style name="circleImageView" parent="">
        <item name="android:background">@color/darkBlue</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>


    <style name="navMenuStyle" parent="">
        <item name="textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
    </style>


</resources>