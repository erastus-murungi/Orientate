<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_event_title"
    android:layout_marginTop="2dp"
    android:elevation="10dp"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/text_view_starting_on"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:textColor="@color/darkBlue"
            android:layout_marginBottom="4dp"
            tools:text="Starting on" />

        <TextView
            android:id="@+id/text_view_ending_on"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:textColor="@color/darkBlue"
            tools:text="Ending on" />

        <ImageView
            android:id="@+id/image_view_must_attend"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@color/lightBlue"
            android:contentDescription="@string/set_reminder"
            android:elevation="10dp"
            android:layout_marginStart="40dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/text_view_event_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="5dp"
        android:layout_toEndOf="@id/linearLayout"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginStart="5dp"
        tools:text="Title" />

    <TextView
        android:id="@+id/text_view_event_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/linearLayout"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:gravity="center"
        android:layout_below="@id/text_view_event_title"
        android:layout_marginStart="5dp"
        android:drawableStart="@drawable/ic_baseline_location_on_24"

        tools:text="Location" />


</RelativeLayout>