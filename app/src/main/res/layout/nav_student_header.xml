<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:layout_gravity="center"
    android:background="@color/midBlue">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/shapeable_image_view_institution_profile_pic"
        android:layout_width="48dp"
        android:layout_height="44dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="36dp"
        android:background="@color/darkBlue"
        android:src="@drawable/ic_education"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_view_institution_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="36dp"
        android:layout_toEndOf="@+id/shapeable_image_view_institution_profile_pic"
        android:text="@string/some_university_orientation"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/shapeable_image_view_institution_profile_pic"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image_view_location_pin"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@+id/text_view_institution_name"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_toEndOf="@+id/shapeable_image_view_institution_profile_pic"
        android:contentDescription="@string/location_pin"
        android:src="@drawable/ic_baseline_location_on_24"
        app:layout_constraintStart_toEndOf="@+id/shapeable_image_view_institution_profile_pic"
        app:layout_constraintTop_toBottomOf="@+id/text_view_institution_name" />

    <TextView
        android:id="@+id/text_view_institution_location"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:layout_below="@+id/text_view_institution_name"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_toEndOf="@+id/image_view_location_pin"
        android:text="@string/sample_loc"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@+id/image_view_location_pin"
        app:layout_constraintTop_toBottomOf="@+id/text_view_institution_name" />

</androidx.constraintlayout.widget.ConstraintLayout>